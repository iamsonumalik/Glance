<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
     android:layout_height="match_parent"
    android:background="#cc000000"
    android:id="@+id/backlay2"

    android:gravity="center"
    >
<GridLayout
    android:layout_width="wrap_content"
    android:gravity="center"
    android:id="@+id/backlay"
    android:columnCount="3"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true">


    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/indiamenu"
        android:layout_marginBottom="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_row="0"
        android:layout_marginRight="25dp"
        android:layout_column="0">
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/india"
            android:scaleType="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="India"
            android:textColor="#FFF"
            />
    </LinearLayout>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
            android:gravity="center"
            android:id="@+id/worldmenu"
            android:layout_row="0"
            android:layout_column="1">
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/world"
                android:scaleType="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="World"
                android:textColor="#FFF"
                />
        </LinearLayout>


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
        android:layout_marginBottom="15dp"
            android:id="@+id/businessmenu"
        android:layout_marginLeft="25dp"
            android:layout_row="0"
            android:layout_column="2">
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:scaleType="center"
                android:background="@drawable/business"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Business"
                android:textColor="#FFF"
                />
        </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="25dp"
        android:id="@+id/sportsmenu"
        android:layout_row="1"
        android:layout_column="0">
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="center"
            android:background="@drawable/sports"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Sports"
            android:textColor="#FFF"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/entertainmentmenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:layout_row="1"
        android:layout_column="1">
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="center"
            android:background="@drawable/entertainment"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Entertainment"
            android:textColor="#FFF"
            />
    </LinearLayout>

    <LinearLayout
            android:orientation="vertical"
            android:id="@+id/sciencemenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_marginLeft="25dp"
            android:gravity="center"
            android:layout_row="1"
            android:layout_column="2">
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:scaleType="center"
                android:background="@drawable/science"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Science-tech"
                android:textColor="#FFF"
                />
        </LinearLayout>


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/simplifiedmenu"
            android:gravity="center"
            android:layout_row="2"
            android:layout_column="0">
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/explainers"
                android:scaleType="center"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Expaliner"
                android:textColor="#FFF"
                />
        </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_row="2"
        android:id="@+id/viralmenu"
        android:layout_column="1">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/viral"
            android:scaleType="center"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Viral"
            android:textColor="#FFF"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/allmenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_row="2"
        android:layout_marginLeft="25dp"
        android:layout_column="2">
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/all"
            android:scaleType="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="All"
            android:textColor="#FFF"
            />
        </LinearLayout>

</GridLayout>
</RelativeLayout>