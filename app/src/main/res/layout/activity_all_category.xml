<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#EFEFEF"
    xmlns:ptr="http://schemas.android.com/apk/res-auto"
    tools:context=".AllCategory"

    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/relativeset"
        android:layout_height="match_parent">

    <com.app.newsonrun.VerticalPager
        android:layout_width="match_parent"
        android:id="@+id/verticalpager"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom|center"
            android:visibility="gone"
            android:id="@+id/textviewmenumessage"
            android:text="Release for Menu"
            android:layout_above="@+id/allframelayout"
            />
        <FrameLayout
            android:layout_width="match_parent"
            android:id="@+id/allframelayout"
            android:layout_height="wrap_content">


        <RelativeLayout
        android:id="@+id/alllinearLayoutGeneral"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >

        <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/allpager"
        />
    </RelativeLayout>




        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EFEFEF"
            android:paddingTop="43dp"
            android:layout_below="@+id/allframelayout"
            android:id="@+id/alltimelinelayout"

            >
            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/alllistview"
                android:background="#EFEFEF"
                android:dividerHeight="0dp"
                android:divider="@null"
                />

        </RelativeLayout>
    </com.app.newsonrun.VerticalPager>

</RelativeLayout>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#cc000000"
        android:id="@+id/backlay2"
        android:gravity="center"
        android:visibility="gone"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/switchback"
            android:id="@+id/switcherlayout"
            android:gravity="center"
            android:visibility="gone"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:text="@string/trends"
            android:maxLines="1"
            android:marqueeRepeatLimit="marquee_forever"
            android:id="@+id/viral"
            android:textColor="#ff0000"
            android:textSize="21sp"
            android:layout_below="@+id/viralimageview"
            android:layout_alignRight="@+id/viralimageview"
            android:layout_alignEnd="@+id/viralimageview" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/offled"
            android:id="@+id/viralimageview"
            android:layout_alignTop="@+id/newsimageview"
            android:layout_toLeftOf="@+id/mySwitch"
            android:layout_toStartOf="@+id/mySwitch" />

        <Switch
            android:id="@+id/mySwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOn=""
            android:thumb="@drawable/knob"
            android:track="@drawable/custom_track"
            android:background="@drawable/inlay"
            android:textOff=""
            android:checked="true"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />


        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginBottom="25dp"
            android:src="@drawable/newsled"
            android:id="@+id/newsimageview"
            android:layout_alignBottom="@+id/mySwitch"
            android:layout_toRightOf="@+id/mySwitch"
            android:layout_toEndOf="@+id/mySwitch" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:text="@string/news"
            android:maxLines="1"
            android:id="@+id/newstv"
            android:textColor="#00b1ff"
            android:textSize="21sp"
            android:gravity="right"
            android:layout_alignBaseline="@+id/viral"
            android:layout_alignBottom="@+id/viral"
            android:layout_alignLeft="@+id/newsimageview"
            android:layout_alignStart="@+id/newsimageview" />
        </RelativeLayout>


        <GridLayout
            android:layout_width="wrap_content"
            android:gravity="center"
            android:id="@+id/backlay"
            android:columnCount="3"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            >


            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/indiamenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_row="0"
                android:layout_column="0">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/india"
                    android:id="@+id/indiaiv"
                    android:scaleType="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="India"
                    android:id="@+id/indiatv"
                    android:textColor="#FFF"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/worldmenu"
                android:layout_row="0"
                android:layout_column="1">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/world"
                    android:id="@+id/worldiv"
                    android:scaleType="center"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="World"
                    android:id="@+id/worldtv"
                    android:textColor="#FFF"
                    android:textSize="14sp" />
            </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/businessmenu"
                android:layout_row="0"
                android:layout_column="2">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="center"
                    android:id="@+id/businessiv"

                    android:background="@drawable/business"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Business"
                    android:id="@+id/businesstv"

                    android:textColor="#FFF"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/sportsmenu"
                android:layout_row="1"
                android:layout_column="0">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="center"
                    android:id="@+id/sportsiv"
                    android:background="@drawable/sports"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Sports"
                    android:id="@+id/sportstv"
                    android:textColor="#FFF"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/entertainmentmenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_row="1"
                android:layout_column="1">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="center"
                    android:id="@+id/entertainmentiv"

                    android:background="@drawable/entertainment"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Entertainment"
                    android:id="@+id/entertainmenttv"

                    android:textColor="#FFF"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/sciencemenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_row="1"
                android:layout_column="2">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="center"
                    android:id="@+id/scienceiv"

                    android:background="@drawable/science"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Science-Tech"
                    android:id="@+id/sciencetv"

                    android:textColor="#FFF"
                    android:textSize="14sp" />
            </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/simplifiedmenu"
                android:gravity="center"
                android:layout_row="2"
                android:layout_column="0">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/explainersiv"

                    android:background="@drawable/explainers"
                    android:scaleType="center"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Explainer"
                    android:id="@+id/explainertv"
                    android:textColor="#FFF"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_row="2"
                android:gravity="center"
                android:id="@+id/viralmenu"
                android:layout_column="1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/viraliv"

                    android:background="@drawable/viral"
                    android:scaleType="center"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Viral"
                    android:id="@+id/viraltv"
                    android:textColor="#FFF"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/allmenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_row="2"
                android:layout_column="2">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/topiv"

                    android:background="@drawable/all"
                    android:scaleType="center"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="All"
                    android:id="@+id/toptv"
                    android:textColor="#FFF"
                    android:textSize="14sp" />
            </LinearLayout>

        </GridLayout>


    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/allviewbuttonlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#aa000000"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_horizontal|bottom">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/refreshlayout"
            android:padding="5dp"
            android:gravity="center"
            >
        <ImageView
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:id="@+id/allviewrefresh"
            android:background="@drawable/refresh"

            />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sharelayout"
            android:gravity="center"
            android:padding="5dp"
            android:layout_toRightOf="@+id/refreshlayout"

            android:layout_alignParentTop="true">
        <ImageView
            android:layout_width="38dp"
            android:layout_height="38dp"
           android:id="@+id/allviewshare"
            android:background="@drawable/share"
            />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:id="@+id/allviewwatchvideolayout"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/sharelayout"
            android:layout_toEndOf="@+id/sharelayout">
            <ImageView
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_toRightOf="@+id/allviewrefresh"
                android:id="@+id/allviewwatchvideo"
                android:background="@drawable/video"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:text="Watch Video"
                android:gravity="center_vertical"
                android:textColor="#fff"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:id="@+id/infolayout"
            android:layout_marginRight="5dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            >
            <ImageView
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_toRightOf="@+id/allviewrefresh"
                android:id="@+id/info"
                android:background="@drawable/info"
                />

        </LinearLayout>
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:id="@+id/onboarding"
        android:background="#cc000000"
        android:clickable="true"
        android:visibility="gone"
        android:layout_height="match_parent">

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="#00000000"
            android:id="@+id/allgo"
            android:layout_gravity="right|bottom" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:background="@drawable/landing"
            android:layout_gravity="right|bottom" />


    </FrameLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#000"
        android:id="@+id/loadingnewpost"
        android:clickable="true"
        android:visibility="gone"
        android:layout_height="match_parent">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/loadingnewpostsplash"
            android:background="@drawable/splash"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <ProgressBar
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/loadingnewpostsplashfirstbar"
            android:layout_below="@+id/loadingnewpostsplash"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="48dp" />


    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:padding="10dp"
        android:visibility="gone"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="More on: "
        android:singleLine="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:freezesText="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:background="@drawable/timelineheader"
        android:textSize="15dp"
        android:textColor="#e4e4e4"
        android:id="@+id/timelineheader"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Please connect to Internet."
        android:textSize="16sp"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textColor="#fff"
        android:visibility="gone"
        android:background="#cc000000"
        android:id="@+id/youareoffline"
        android:layout_gravity="center" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/goup"
        android:layout_margin="10dp"
        android:id="@+id/goupbutton"
        android:layout_gravity="right|bottom" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loading Timeline..."
        android:visibility="gone"
        android:textSize="14sp"
        android:id="@+id/loadingtimelinetv"
        android:layout_gravity="center" />
</FrameLayout>
