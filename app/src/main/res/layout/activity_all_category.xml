<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#EFEFEF"
    xmlns:ptr="http://schemas.android.com/apk/res-auto"

    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EFEFEF"
        android:id="@+id/alltimelinelayout"

        >


    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/alllistview"
        android:background="#EFEFEF"
        android:dividerHeight="0dp"
        ptr:ptrAnimationStyle="flip"
        android:divider="@null"
        android:layout_below="@+id/timelineheader" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:padding="10dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="More on: "
            android:background="@drawable/timelineheader"
            android:textSize="16dp"
            android:id="@+id/timelineheader"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>


    <com.handmark.pulltorefresh.library.PullToRefreshScrollView
        android:id="@+id/allscrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#EFEFEF"
        ptr:ptrAnimationStyle="flip"
        android:fillViewport="true"
        ptr:ptrMode="both"

        >

    <RelativeLayout
        android:id="@+id/alllinearLayoutGeneral"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
       >

        <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/allpager"
        />



    </RelativeLayout>
    </com.handmark.pulltorefresh.library.PullToRefreshScrollView>

    <RelativeLayout
        android:id="@+id/allviewbuttonlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:visibility="gone"
        android:background="#aa000000"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_horizontal|bottom">


        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:id="@+id/allviewrefresh"
            android:background="@drawable/refresh"

            />

        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@+id/allviewrefresh"
            android:id="@+id/allviewshare"
            android:background="@drawable/share"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:id="@+id/allviewwatchvideolayout"
            android:layout_toRightOf="@+id/allviewshare"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_toRightOf="@+id/allviewrefresh"
                android:id="@+id/allviewwatchvideo"
                android:background="@drawable/video"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:text="Watch Video"
                android:gravity="center_vertical"
                android:textColor="#fff"
                />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#cc000000"
        android:id="@+id/backlay2"
        android:visibility="gone"
        android:gravity="center"
        >
        <GridLayout
            android:layout_width="wrap_content"
            android:gravity="center"
            android:id="@+id/backlay"
            android:columnCount="3"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">


            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/indiamenu"
                android:layout_marginBottom="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_row="0"
                android:layout_marginRight="25dp"
                android:layout_column="0">
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/india"
                    android:scaleType="center"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="India"
                    android:textColor="#FFF"
                    />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:gravity="center"
                android:id="@+id/worldmenu"
                android:layout_row="0"
                android:layout_column="1">
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/world"
                    android:scaleType="center"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="World"
                    android:textColor="#FFF"
                    />
            </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="15dp"
                android:id="@+id/businessmenu"
                android:layout_marginLeft="25dp"
                android:layout_row="0"
                android:layout_column="2">
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:scaleType="center"
                    android:background="@drawable/business"

                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Business"
                    android:textColor="#FFF"
                    />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="25dp"
                android:id="@+id/sportsmenu"
                android:layout_row="1"
                android:layout_column="0">
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:scaleType="center"
                    android:background="@drawable/sports"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Sports"
                    android:textColor="#FFF"
                    />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/entertainmentmenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:gravity="center"
                android:layout_row="1"
                android:layout_column="1">
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:scaleType="center"
                    android:background="@drawable/entertainment"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Entertainment"
                    android:textColor="#FFF"
                    />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/sciencemenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:gravity="center"
                android:layout_row="1"
                android:layout_column="2">
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:scaleType="center"
                    android:background="@drawable/science"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Science-tech"
                    android:textColor="#FFF"
                    />
            </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/simplifiedmenu"
                android:gravity="center"
                android:layout_row="2"
                android:layout_column="0">
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/explainers"
                    android:scaleType="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Expaliner"
                    android:textColor="#FFF"
                    />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_row="2"
                android:id="@+id/viralmenu"
                android:layout_column="1">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/viral"
                    android:scaleType="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Viral"
                    android:textColor="#FFF"
                    />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/allmenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_row="2"
                android:layout_marginLeft="25dp"
                android:layout_column="2">
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/all"
                    android:scaleType="center"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="All"
                    android:textColor="#FFF"
                    />
            </LinearLayout>

        </GridLayout>
    </RelativeLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:id="@+id/onboarding"
        android:background="#cc000000"
        android:layout_height="match_parent">

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="#00000000"
            android:id="@+id/allgo"
            android:layout_gravity="right|bottom" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:background="@drawable/landing"
            android:layout_gravity="right|bottom" />

    </FrameLayout>

</FrameLayout>
