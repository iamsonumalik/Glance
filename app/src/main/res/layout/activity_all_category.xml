<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#EFEFEF"
    xmlns:ptr="http://schemas.android.com/apk/res-auto"
    tools:context=".AllCategory"

    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/relativeset"
        android:layout_height="match_parent">

    <com.app.newsonrun.VerticalPager
        android:layout_width="match_parent"
        android:id="@+id/verticalpager"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom|center"
            android:visibility="gone"
            android:id="@+id/textviewmenumessage"
            android:text="Release for Menu"
            android:layout_above="@+id/allframelayout"
            />
        <FrameLayout
            android:layout_width="match_parent"
            android:id="@+id/allframelayout"
            android:layout_height="wrap_content">


        <RelativeLayout
        android:id="@+id/alllinearLayoutGeneral"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >

        <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/allpager"
        />
    </RelativeLayout>



        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EFEFEF"
            android:layout_below="@+id/allframelayout"
            android:id="@+id/alltimelinelayout"

            >
            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/alllistview"
                android:background="#EFEFEF"
                android:dividerHeight="0dp"
                android:divider="@null"
                />

        </RelativeLayout>
    </com.app.newsonrun.VerticalPager>

</RelativeLayout>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#cc000000"
        android:id="@+id/backlay2"
        android:visibility="gone"

        >

        <GridLayout
            android:layout_width="wrap_content"
            android:gravity="center"
            android:id="@+id/backlay"
            android:columnCount="3"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            >


            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/indiamenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_row="0"
                android:layout_column="1">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/india"
                    android:id="@+id/indiaiv"
                    android:scaleType="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="India"
                    android:id="@+id/indiatv"
                    android:textColor="#FFF"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/worldmenu"
                android:layout_row="0"
                android:layout_column="2">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/world"
                    android:id="@+id/worldiv"
                    android:scaleType="center"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="World"
                    android:id="@+id/worldtv"
                    android:textColor="#FFF"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/businessmenu"
                android:layout_row="1"
                android:layout_column="0">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="center"
                    android:id="@+id/businessiv"

                    android:background="@drawable/business"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Business"
                    android:id="@+id/businesstv"

                    android:textColor="#FFF"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/sportsmenu"
                android:layout_row="1"
                android:layout_column="1">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="center"
                    android:id="@+id/sportsiv"
                    android:background="@drawable/sports"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Sports"
                    android:id="@+id/sportstv"
                    android:textColor="#FFF"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/entertainmentmenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_row="2"
                android:layout_column="0">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="center"
                    android:id="@+id/entertainmentiv"

                    android:background="@drawable/entertainment"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Entertainment"
                    android:id="@+id/entertainmenttv"

                    android:textColor="#FFF"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/sciencemenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_row="1"
                android:layout_column="2">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="center"
                    android:id="@+id/scienceiv"

                    android:background="@drawable/science"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Science-Tech"
                    android:id="@+id/sciencetv"

                    android:textColor="#FFF"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/simplifiedmenu"
                android:gravity="center"
                android:layout_row="2"
                android:layout_column="2">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/explainersiv"

                    android:background="@drawable/explainers"
                    android:scaleType="center"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Explainer"
                    android:id="@+id/explainertv"
                    android:textColor="#FFF"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_row="2"
                android:gravity="center"
                android:id="@+id/viralmenu"
                android:layout_column="1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/viraliv"

                    android:background="@drawable/viral"
                    android:scaleType="center"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Viral"
                    android:id="@+id/viraltv"
                    android:textColor="#FFF"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/allmenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_row="0"
                android:layout_column="0">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/topiv"

                    android:background="@drawable/all"
                    android:scaleType="center"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="All"
                    android:id="@+id/toptv"
                    android:textColor="#FFF"
                    android:textSize="14sp" />
            </LinearLayout>

        </GridLayout>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/closemenu"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/allviewbuttonlayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#aa000000"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_horizontal|bottom">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/refreshlayout"
            android:padding="5dp"
            android:gravity="center"
            >
        <ImageView
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:id="@+id/allviewrefresh"
            android:background="@drawable/menu"

            />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sharelayout"
            android:gravity="center"
            android:padding="5dp"
            android:layout_toRightOf="@+id/refreshlayout"

            android:layout_alignParentTop="true">
        <ImageView
            android:layout_width="38dp"
            android:layout_height="38dp"
           android:id="@+id/allviewshare"
            android:background="@drawable/share"
            />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:id="@+id/allviewwatchvideolayout"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/sharelayout"
            android:layout_toEndOf="@+id/sharelayout">
            <ImageView
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_toRightOf="@+id/allviewrefresh"
                android:id="@+id/allviewwatchvideo"
                android:background="@drawable/video"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:text="Watch Video"
                android:gravity="center_vertical"
                android:textColor="#fff"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:id="@+id/infolayout"
            android:layout_marginRight="5dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            >
            <ImageView
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_toRightOf="@+id/allviewrefresh"
                android:id="@+id/info"
                android:background="@drawable/info"
                />

        </LinearLayout>
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:id="@+id/newboarding"
        android:background="#00000000"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:id="@+id/downlayout"
            >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/handdown"
            android:layout_marginTop="25dp"
            android:src="@drawable/hand_down"
            android:layout_gravity="top|center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/leftlayout"
            android:visibility="gone"
            android:layout_gravity="right|center_vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/handleft"
            android:src="@drawable/hand_left"
            android:layout_gravity="right|center_vertical"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="150dp" />

        </RelativeLayout>


    </FrameLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/interneterror"
        android:textSize="16sp"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textColor="#fff"
        android:visibility="gone"
        android:background="#cc000000"
        android:id="@+id/youareoffline"
        android:layout_gravity="center" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:layout_margin="10dp"
        >
        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/timelineplus"
            android:id="@+id/moreonbutton"
            android:layout_marginLeft="5dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            />
    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:visibility="gone"
        android:background="@drawable/goup"
        android:id="@+id/goupbutton"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/moreonbutton"
        android:layout_toStartOf="@+id/moreonbutton" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#cc000000"
        android:id="@+id/tagslayout"
        android:visibility="gone"
        >

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/imageView3"
            android:layout_margin="10dp"
            android:src="@drawable/timelineclose"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timlinetagslistView"
            android:dividerHeight="0dp"
            android:divider="@null"
            android:layout_above="@+id/imageView3"
            android:layout_alignRight="@+id/imageView3"
            android:layout_alignEnd="@+id/imageView3" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loading Timeline..."
        android:visibility="gone"
        android:textSize="14sp"
        android:id="@+id/loadingtimelinetv"
        android:layout_gravity="center" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:layout_marginRight="5dp"
        android:gravity="right"
        android:visibility="gone"
        android:id="@+id/imagecreditlayout"
        android:orientation="vertical"
        android:layout_gravity="right|bottom"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:text="Credits"
        android:textColor="#fefefe"
        android:padding="5dp"
        android:background="#000"
        android:id="@+id/imagecredit"
         />
        <ImageView
            android:layout_width="12dp"
            android:layout_height="10dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/tooltiptriangle"
            />
    </LinearLayout>

</FrameLayout>
