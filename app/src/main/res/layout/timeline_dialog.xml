<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#cc000000"
    android:id="@+id/timelinedialogbackground"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/timelineframelayout"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp">
    <com.app.newsonrun.ryanharter.viewpager.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/timelinedialogimageView"
        android:scaleType="fitXY"
        android:background="#ee000000"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        app:orientation="vertical"
        android:layout_below="@+id/closetimelinedialog"
        android:layout_alignParentBottom="true" />

        <Button
            android:layout_width="63dp"
            android:layout_height="25dp"
            android:background="@drawable/closetimelinedialog"
            android:id="@+id/closetimelinedialog"
            android:layout_gravity="right|top"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/timelineguide"
            android:background="@drawable/timelineposterguide"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp" />
    </RelativeLayout>



</FrameLayout>